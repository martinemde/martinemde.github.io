---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="bg-white rounded-lg border border-gray-200 p-8 shadow-sm">
  <article class="prose prose-gray max-w-none prose-headings:text-gray-900 prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline prose-code:text-gray-900 prose-code:bg-gray-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-normal prose-code:before:content-none prose-code:after:content-none prose-pre:bg-gray-900 prose-pre:text-gray-100">
    <h1 class="text-3xl font-semibold text-gray-900 mb-8">{title}</h1>
    <slot />
  </article>
</div>